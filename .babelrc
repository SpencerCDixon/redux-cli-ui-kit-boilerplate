{
  "env": {
    "development": {
      "presets": [
        "es2015",
        "react",
        "stage-0"
      ],
      "plugins": [
       ["react-transform", {
         "transforms": [{
           "transform": "react-transform-hmr",
           "imports": ["react"],
           "locals": ["module"]
         }]
       }]
     ]
    },
    "production": {
      "comments": false,
      "presets": [
        "es2015",
        "react",
        "stage-0"
      ]
    },
    "test": {
      "presets": [
        "es2015",
        "react",
        "stage-0"
      ],
    }
  },
  "plugins": [
    "transform-decorators-legacy"
  ],
}
